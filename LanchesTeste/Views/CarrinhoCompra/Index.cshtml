@Model CarrinhoCompraViewModel

<div class="container">

	<div class="row">
		<img src="~/Images/Full-Cart-icon.png"/>

			<div>
				<h4>Seu carrinho de compras : </h4>
			</div>

			<table class="table table-bordered-striped">

				<thead>

					</tr>
						<th>Quantidade</th>
						<th>Preço</th>
						<th class="text-rigth"> Preço</th>
						<th class="text-rigth"> Subtotal</th>

					<tr>
				</thead>

				<tbody>
				@foreach(var item in Model.CarrinhoCompra.CarrinhoCompraItems)
				{
					<tr>
						<td class="text-center">@item.Quantidade</td>
						<td class="text-left">@item.Nome</td>
						<td class="text-center">@item.Lanche.Preco.ToString("c")</td>

						<td class="text-rigth">
						@((item.Quantidade * item.Lanche.Preco).ToString("c"))	
						</td>

						<td class="text-center">
							<a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
							asp-route-lancheId="@item.Lanche.LancheId"> <img src="~/Images/delete.png"/>
						</a>
						</td>
					</tr>
				}
			</tbody>
			<tfoot>
				<tr>
					<td colspan="3" class="text=rigth">Total: </td>
					<td class="text-right">
						@Model.CarrinhoCompraTotal.ToString("c")
					</td>
				</tr>
			</tfoot>
		</table>

		<div class="text-rigth">
			<div class="btn-group">
				<a class="btn btn-sucess" asp-controller="Pedido" asp-action="Checkout">Encherrar pedido</a>
				&nbsp;&nbsp;&nbsp;
				<a class="btn bnt-primary" asp-controller="Lanche" asp-action="List">Continuar Comprando</a>
			</div>
		</div>
		<br/>
	</div>
</div>